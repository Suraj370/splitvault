generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Savings {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  userId                String
  totalBalance          Float    @default(0.0)
  accounts              Account[]
}

model Account {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  schemeName            String
  balance               Float    @default(0.0)
  allocationPercentage  Float
  savings               Savings? @relation(fields: [savingsId], references: [id])
  savingsId             String?  @db.ObjectId
}